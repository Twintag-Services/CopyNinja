{
    "manifest_version": 3,
    "name": "Copy Ninja",
    "version": "2.0",
    "description": "Copy & paste your data like a ninja.",
    "permissions": ["storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "web_accessible_resources": [
      {
        "resources": [ "animate.min.css" ],
        "matches": [ "<all_urls>" ]
      }
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": ["animate.min.css","content.css"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  